<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        Inicia sesion con tu cuenta
      </div>
      <img src="/img/homebanking.png"  class="rounded-circle mx-auto d-block m-10 logo">
      <div class="card-body">
        <form action="/usuarios/iniciarsesion" method="POST">
    
          <div class="form-group">
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="Ingresa tu email"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              class="form-control"
              name="contraseña"
              placeholder="Ingresa tu contraseña"
            />
          </div>
          
        
          <button class="btn btn-primary btn-block">
              Registro
          </button>
        </form>
      </div>
    </div>
  </div>
</div>