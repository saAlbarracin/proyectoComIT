<div class="jumbotron mt-4">
  <h1>Hola {{user.nombre}}</h1>
  <div class="card text-center">
    <div class="card-header">

      <h5>Dinero Disponible</h5>
    </div>
    <div class="card-body">
      <h5 class="card-title">${{user.saldo}}</h5>

      <!-- Button trigger modal -->

      <button
        type="button"
        class="btn btn-primary"
        data-bs-toggle="modal"
        data-bs-target="#modalIngresar"
      >
        Ingresar
      </button>
      <button
        type="button"
        class="btn btn-primary"
        data-bs-toggle="modal"
        data-bs-target="#modalTransferir"
      >
        Transferir
      </button>
    </div>

  </div>
</div>
<div class="jumbotron mt-4">
  <h1>Ultimos Movimientos</h1>
  <div class="card text-center">
    <table class="table-success">
      <thead>
        <tr>
          <th scope="col">Usuario Origen</th>
          <th scope="col">Usuario Destino</th>
          <th scope="col">Monto</th>
        </tr>
      </thead>
      {{#each movimientos}}
        <tr>
          <td class="table-success">{{usuarioOrigen.aliasCuenta}}</td>
          <td class="table-success">{{usuarioDestino.aliasCuenta}}</td>
          <td class="table-success">{{monto}}</td>

        </tr>
      {{/each}}
    </table>
  </div>
</div>

<div
  class="modal fade"
  id="modalIngresar"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Carga tu billetera
          digital</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <form action="/operaciones/add" method="POST">
        <div class="modal-body">
          <h6>Monto a cargar</h6>
          <input type="number" name="monto" min="0" step="1000" />
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >Cerrar</button>
          <button type="submit" class="btn btn-primary">Aceptar</button>
        </div>
      </form>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="modalTransferir"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Transferi a un amigo</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <form action="/operaciones/transferencia" method="POST">
        <div class="modal-body">
          <h6>Alias</h6>
          <input type="text" name="usuarioDestino" />
          <h6>Monto a transferir</h6>
          <input type="number" name="monto" min="0" step="1000" />
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >Cerrar</button>
          <button type="submit" class="btn btn-primary">Aceptar</button>
        </div>
      </form>
    </div>
  </div>
</div>